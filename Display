    #Draw the rectangle
    pygame.draw.rect(DISPLAYSURF, BLACK, (particle.x, particle.y, 5, 5))

    #Loop to check for a key or mouse event
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()
    #Updates game state every frame
    pygame.display.update()